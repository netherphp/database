{
	"name": "netherphp/database",
	"description": "A database connection and query tool.",
	"keywords": [ "php", "database" ],
	"license": "BSD-2-Clause",
	"authors":[
		{	"name": "Bob Majdak Jr",
			"email": "bob@pegasusgate.net",
			"homepage": "http://pegasusgate.net/+bob",
			"role": "developer" }
	],
	"autoload":{
		"psr-0": {
			"Nether\\": "src/"
		}
	},
	"require":{
		"php": ">=8.1.0",
		"netherphp/object": "^4.1",
		"netherphp/option": "^1.0",
		"netherphp/console": "^4.0"
	},
	"require-dev": {
		"netherphp/standards": "^0.2.5",
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.6",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"bin": [
		"bin/netherdb"
	]
}
